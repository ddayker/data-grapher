<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DataGrapher" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="colorPrimary">@color/majorRed</item>
        <item name="colorPrimaryVariant">@color/majorRed</item>
        <item name="colorOnPrimary">@color/black</item>

        <item name="colorSecondary">@color/majorDark</item>
        <item name="colorSecondaryVariant">@color/minorGray</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="fontFamily">@font/poppins_regular</item>
    </style>

    <style name="splashScreenTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:statusBarColor">@color/white</item>
    </style>

    <style name="appBarTheme" parent="Widget.Material3.AppBarLayout" />

    <style name="popupTheme" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ToolBarText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/majorDark</item>
    </style>

    <style name="optionText">
        <item name="android:textColor">@color/textGray</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="optionSeekBar">
        <item name="android:thumb">@drawable/thumb</item>
        <item name="android:progressBackgroundTint">@color/majorRed</item>
        <item name="android:progressTint">@color/majorRed</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_width">220dp</item>
        <item name="android:layout_height">20dp</item>
    </style>

    <style name="optionSeekBarDiscrete" parent="Widget.AppCompat.SeekBar.Discrete">
<!--        <item name="android:thumb">@drawable/thumb</item>-->
        <item name="android:progressBackgroundTint">@color/majorDark</item>
        <item name="android:progressTint">@color/majorDark</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_width">220dp</item>
        <item name="android:layout_height">20dp</item>
    </style>

    <style name="optionCardView">
        <item name="android:layout_marginStart">170dp</item>
        <item name="android:elevation">10dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_width">60dp</item>
    </style>

    <style name="optionSwitch">
        <item name="android:thumb">@drawable/switch_thumb</item>
        <item name="track">@drawable/switch_track</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_width">55dp</item>
        <item name="android:layout_marginStart">155dp</item>
    </style>
</resources>